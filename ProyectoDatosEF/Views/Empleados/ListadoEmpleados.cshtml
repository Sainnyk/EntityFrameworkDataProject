@model IEnumerable<ProyectoDatosEF.Models.Empleado>

@{
    ViewData["Title"] = "ListadoEmpleados";
    List<String> funciones = ViewData["EMPLEADOS"] as List<String>;
}

<h1>Listado de empleados</h1>

<form method="post">
    <label>Oficios:</label>
    <select name="funcion">
        @foreach (String funcion in funciones)
        {
            <option value="@funcion">@funcion</option>
        }
    </select>
    <br/>
    <label>Incremento salarial:</label>
    <input type="text" class="form-control" name="incremento" />
    <button class="btn btn-dark">Incrementar salario</button>
</form>
<hr/>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdEmpleado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Oficio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr >
            <td>
                @Html.DisplayFor(modelItem => item.IdEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Oficio)
            </td>
                <td style="background-color:plum">
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                <a asp-controller="Empleados" asp-action="Delete" asp-route-id="@item.IdEmpleado">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
